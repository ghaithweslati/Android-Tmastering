<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ajouter_projet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context="com.example.hp.tmastering.AjouterProjetActivity">



    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?attr/colorPrimary"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/backProj"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENREGISTRER"
                android:textSize="15dp"
                android:id="@+id/saveProj"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="35dp"
            android:orientation="vertical"
            android:id="@+id/projetLayout">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="+"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_alignParentRight="true"
                android:id="@+id/appMod"
                />


            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nomProj"
            android:padding="15dp"
            android:textSize="15dp"
            android:text="Nouveau projet"
                android:background="@color/white"
            android:textColor="@color/black"

            />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow"
            />

            <ListView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/lstMiss"
                android:divider="@android:color/transparent"
                android:dividerHeight="17.0dp"
                android:scrollbars="none"
                android:background="#E6E6E6"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
